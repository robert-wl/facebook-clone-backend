

type Friend {
    sender: User!
    receiver: User!
    accepted: Boolean!
}

input FriendInput {
    sender: ID!
    receiver: ID!
}

extend type Query {
    getFriends: [Friend] @auth
}

extend type Mutation {
    addFriend(friendInput: FriendInput!): Friend @auth
    acceptFriend(friend: ID!): Friend @auth
    rejectFriend(friend: ID!): Friend @auth
}